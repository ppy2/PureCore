export PATH="/bin:/sbin:/usr/bin:/usr/sbin"

if [ "$PS1" ]; then
    if [ "`id -u`" -eq 0 ]; then
	export PS1='# '
    else
	export PS1='$ '
    fi
fi

export EDITOR='/bin/mcedit'
export SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt
export LC_ALL=ru_RU.UTF-8
export LANG=ru_RU.UTF-8
export LC_CTYPE=ru_RU.UTF-8

# Settings for squashfs (read-only filesystem)
export MC_TMPDIR="/tmp/mc"
mkdir -p "$MC_TMPDIR" 2>/dev/null
export MC_HOME="$MC_TMPDIR"
export HOME=/tmp

# General cache settings in /tmp
export HOME_CACHE="/tmp/.cache"
mkdir -p "$HOME_CACHE" 2>/dev/null

# Command history in /tmp
export HISTFILE="/tmp/.bash_history"


# Source configuration files from /etc/profile.d
for i in /etc/profile.d/*.sh ; do
    if [ -r "$i" ]; then
	. $i
    fi
done
unset i
