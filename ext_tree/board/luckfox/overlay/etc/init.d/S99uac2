#!/bin/sh

# Auto-start USB UAC2 audio interface on boot

# Wait for USB subsystem
sleep 2

# Setup UAC2 gadget
/root/uac2_setup.sh

# Wait for ALSA to enumerate devices
sleep 3

# Start audio routing
/root/uac2_to_i2s.sh

# Unmute I2S output
amixer -c 0 set 'Master Playback' 100% unmute 2>/dev/null || true
amixer -c 0 set 'PCM' 100% unmute 2>/dev/null || true

echo "USB Audio Interface ready!"
